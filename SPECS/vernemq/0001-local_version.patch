         sasl,
         inets,
         xmerl,
@@ -138,12 +138,9 @@
             "share/schema/21-vmq_http_pub.schema"},
         {template, "apps/vmq_web_ui/priv/vmq_web_ui.schema", "share/schema/22-vmq_web_ui.schema"},
         {template, "files/vmq.schema", "share/schema/30-vmq.schema"},
